<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_company_form_inherit_view" model="ir.ui.view">
        <field name="name">res.company.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='website']" position="after">
                <field name="work_center_cost_account" invisible='1'/>
                <field name="work_center_cost_account_subcontract" invisible='1'/>
                <field name="work_center_subcontract" invisible='1'/>
            </xpath>
        </field>
    </record>

</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_res_company_form_inherit" model="ir.ui.view">
        <field name="name">res.company.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="name_company_eng"  placeholder="Company name ENG"/>
            </xpath>

            <xpath expr="//field[@name='website']" position="after">
                <field name="street_eng" string="Address1" class="o_address_street"/>
                <field name="street2_eng" string="Address2"/>
                <field name="city_eng" string="City"/>
            </xpath>

            <xpath expr="//field[@name='favicon']" position="after">
                <group>
                    <field name="image" string="Imge ISO" widget="image"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
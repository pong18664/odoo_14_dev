<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_move_form_inherit" model="ir.ui.view">
        <field name="name">account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <!-- เพิ่มปุ่ม -->
            <xpath expr="//button[@name='button_draft']" position="after">
                <button string="Print Invoice (TH)" name="print_report_invoice_TH" type="object" attrs="{'invisible': [('move_type', '!=', 'out_invoice')]}"/>
                <!-- <button string="Print Report Invoice (ENG)" name="print_report_invoice_ENG" type="object" attrs="{'invisible': [('move_type', '!=', 'out_invoice')]}"/> -->
                <button string="Print Tax Invoice (TH)" name="print_report_tax_invoice_TH" type="object" attrs="{'invisible': [('move_type', '!=', 'out_invoice')]}"/>
                <!-- <button string="Print Report Tax Invoice (ENG)" name="print_report_tax_invoice_ENG" type="object" attrs="{'invisible': [('move_type', '!=', 'out_invoice')]}"/>             -->
                <button string="Print Billing Note (TH)" name="print_report_billing_note_TH" type="object" attrs="{'invisible': [('move_type', '!=', 'out_invoice')]}"/> 
            </xpath>
        </field>
    </record>


    <record id="account_move_view_tab_tax_invoice_inherit" model="ir.ui.view">
        <field name="name">account.move.view.tab.tax.invoice.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="l10n_th_tax_invoice.view_move_form"/>
        <field name="arch" type="xml">

            <!-- tab tax invoice -->
            <xpath expr="//page[@id='tax_invoice']//field[@name='tax_invoice_ids']" position="before">
                <group>
                    <group>
                        <field name="select_tax_invoice_id"/>
                    </group>
                </group>
            </xpath>

        </field>
    </record>
 
</odoo>
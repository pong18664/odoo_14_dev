<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_mrp_work_center_form_inherit" model="ir.ui.view">
        <field name="name">mrp.workcenter.form</field>
        <field name="model">mrp.workcenter</field>
        <field name="inherit_id" ref="mrp.mrp_workcenter_view"/>
        <field name="arch" type="xml">
            <!-- เพิ่ม field salary_per_month และ field yes_or_no ใน view ของ work center -->
            <xpath expr="//field[@name='costs_hour']" position="after">
                <field name="salary_per_month"/>
                <field name="yes_or_no"/>
            </xpath>
        </field>
    </record>

</odoo>
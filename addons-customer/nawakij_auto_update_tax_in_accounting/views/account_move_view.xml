<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_move_form_inherit_update_tax" model="ir.ui.view">
        <field name="name">account.move.form.inherit.update.tax</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_open_update_tax_wizard"
                        string="Update Taxes"
                        type="object"
                        class="btn-primary"
                        attrs="{'invisible': [('move_type', '!=', 'out_invoice')]}"/>
            </xpath>
        </field>
    </record>

</odoo>

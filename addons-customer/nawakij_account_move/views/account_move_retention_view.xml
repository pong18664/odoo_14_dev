<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Action -->
    <record id="action_move_out_retention_type" model="ir.actions.act_window"> 
        <field name="name">Retention</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="domain">[('move_type', '=', 'out_retention')]</field>
        <field name="context">{'default_move_type': 'out_retention'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Create a retention
            </p>
        </field>
    </record>

    <!-- menu button -->
    <menuitem id="menu_retention"
            name="Retention"
            parent="account.menu_finance_receivables"
            action="action_move_out_retention_type"
            sequence="2"
    />

</odoo>
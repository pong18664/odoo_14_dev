<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="res_config_settings_view_form_inherit_custom" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.custom</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='app_settings_block']//div[@id='analytic']" position="after">
                <h2>Default Document Retention</h2>
                <div class="row mt16 o_settings_container" id="default_document_retention">
                    <div class="col-lg-6 col-12 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label for="journal_default_id">Default Journal Account</label>
                            <field name="journal_default_id" options="{'no_create': True}"/>
                        </div>
                    </div>
                    <div class="col-lg-6 col-12 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label for="debit_default_id">Default Debit Account</label>
                            <field name="debit_default_id" options="{'no_create': True}"/>
                        </div>
                    </div>
                    <div class="col-lg-6 col-12 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane"/>
                    </div>
                    <div class="col-lg-6 col-12 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label for="credit_default_id">Default Credit Account</label>
                            <field name="credit_default_id" options="{'no_create': True}"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
      
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form View -->
    <record id="view_work_progess_project_form" model="ir.ui.view">
        <field name="name">work.progess.project.form</field>
        <field name="model">work.progess.project</field>
        <field name="arch" type="xml">
            <form string="Work Progess Project">
                <header>
                    <button name="create_work_progess" string="Create Work Progess" type="object"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="project_name_id"/>
                            <field name="name" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Work Progess">
                            <field name="project_line_ids">
                                <tree editable='bottom'>
                                    <field name="work_progess_id"/>
                                    <field name="date_work_progess"/>
                                </tree>
                                <form>
                                    <group>
                                        <group>
                                            <field name="work_progess_id"/>
                                            <field name="date_work_progess"/>
                                        </group>
                                        <group>
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </page>   
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    

    <!-- Tree View -->
    <record id="view_work_progess_project_tree" model="ir.ui.view">
        <field name="name">work.progess.project.tree</field>
        <field name="model">work.progess.project</field>
        <field name="arch" type="xml">
            <tree string="Work Progess Project">
                <field name="project_name_id"/>
            </tree>
        </field>
    </record>

    
</odoo>

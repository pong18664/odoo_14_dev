<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form View -->
    <record id="view_configuration_work_progess_type_form" model="ir.ui.view">
        <field name="name">configuration.work.progess.type.form</field>
        <field name="model">configuration.work.progess.type</field>
        <field name="arch" type="xml">
            <form string="Configuration Work Progess Type">
                <sheet>
                    <group>
                        <group>
                            <field name="name_type"/>
                            <field name="percent"/>
                        </group>
                        <group>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Tree View -->
    <record id="view_configuration_work_progess_type_tree" model="ir.ui.view">
        <field name="name">configuration.work.progess.type.tree</field>
        <field name="model">configuration.work.progess.type</field>
        <field name="arch" type="xml">
            <tree string="Configuration Work Progess Type">
                <field name="name_type"/>
                <field name="percent"/>
            </tree>
        </field>
    </record>

    
</odoo>

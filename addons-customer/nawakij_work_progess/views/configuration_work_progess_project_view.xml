<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form View -->
    <record id="view_configuration_work_progess_project_form" model="ir.ui.view">
        <field name="name">configuration.work.progess.project.form</field>
        <field name="model">configuration.work.progess.project</field>
        <field name="arch" type="xml">
            <form string="Configuration Work Progess Project">
                <header>
                    <button name="create_sale_order" string="Create SO" type="object"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_sale_order" type="object" class="oe_stat_button" icon="fa-inbox" attrs="{'invisible': [('count_sale_order', '=', 0)]}">   
                            <field name="count_sale_order" string="Sale Order" widget="statinfo"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name_project"/>
                            <field name="sum_percent"/>
                            <field name="partner_ids"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Type Lines">
                            <field name="project_line">
                                <tree editable='bottom'>
                                    <field name="name_ids"/>
                                    <field name="percent" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Product Lines">
                            <field name="product_line_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="qty"/>
                                    <field name="unit_price"/>
                                    <field name="total"/>
                                </tree>
                            </field>
                        </page> 
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Tree View -->
    <record id="view_configuration_work_progess_project_tree" model="ir.ui.view">
        <field name="name">configuration.work.progess.project.tree</field>
        <field name="model">configuration.work.progess.project</field>
        <field name="arch" type="xml">
            <tree string="Configuration Work Progess Project">
                <field name="name_project"/>
            </tree>
        </field>
    </record>

    
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Wizard View Form -->
    <record id="work_progess_wizard_view_form" model="ir.ui.view">
        <field name="name">work.progess.wizard.view.form</field>
        <field name="model">work.progess.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="product_id" string="Product"/>
                    </group>
                </group>
                <notebook>
                    <page string="Product Line">
                        <field name="product_line_ids">
                            <tree editable="bottom">
                                <field name="check_box"/>
                                <field name="product_id"/>
                                <field name="grouping_product_id"/>
                            </tree>
                            <form>
                                <field name="product_id"/>
                                <field name="grouping_product_id"/>
                            </form>
                        </field>
                    </page>
                </notebook>
                <footer>
                    <button string="Confirm" type="object" name="action_confirm" class="btn-primary" />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <!-- Wizard Action -->
    <record id="action_open_group_product_wizard" model="ir.actions.act_window">
        <field name="name">Group Product Wizard</field>
        <field name="res_model">work.progess.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- 
        field ที่ถูกเพิ่ม secondary_uom_id , id_product , check_type_category , length , width , area 
        และเพิ่มปุ่ม Update Variant
    -->
    <record id="view_product_product_form" model="ir.ui.view">
        <field name="name">product.product.form.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='uom_po_id']" position="after">
                <field name="secondary_uom_id" groups="uom.group_uom" options="{'no_create': True}"/>
            </xpath>
            <xpath expr="//field[@name='categ_id']" position="after">
                <field name="id_product" string='Product Id' />
                <field name="check_type_category" invisible="1"/>
                <field name="length" string='Length' attrs="{'invisible':[('check_type_category', '=',  False)]}"/>
                <field name="width" string='Width' attrs="{'invisible':[('check_type_category', '!=', 'glass'),('check_type_category', '!=', 'aluminium sheet')]}"/>
                <field name="area" string='Area' attrs="{'invisible':[('check_type_category', '!=', 'glass'),('check_type_category', '!=', 'aluminium sheet')]}"/>
            </xpath>
            <header>
                <button string="Update Variant" name="compute_length_and_width" type="object" />
            </header>
        </field>
    </record>

    <!-- field ที่ถูกเพิ่ม id -->
    <record id="view_product_product_tree" model="ir.ui.view">
        <field name="name">product.product.tree</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='default_code']" position="before">
                <field name="id"/>
            </xpath>
        </field>
    </record>


    <record id="view_product_product_form_inherit" model="ir.ui.view">
        <field name="name">product.product.form.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='purchase']" position="replace">
                <page string="Purchase">
                    <field name="product_variant_seller_ids"  >
                        <tree string="Purchase" editable="bottom" >
                            <field name="sequence" widget="handle"/>
                            <field name="name" />
                            <field name="product_id" readonly="1" optional="hide"
                                invisible="1" 
                                groups="product.group_product_variant" 
                                domain="[('product_tmpl_id', '=?', context.get('default_product_tmpl_id', False))]"
                                options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                            <field name="variant" widget="many2many_tags" invisible="1"/>
                            <field name="product_tmpl_id" string="Product" readonly="1" invisible="context.get('visible_product_tmpl_id', True)" />
                            <field name="product_name" optional="hide"/>
                            <field name="product_code" optional="hide"/>
                            <field name="currency_id" groups="base.group_multi_currency"/>
                            <field name="date_start" optional="hide"/>
                            <field name="date_end" optional="hide"/>
                            <field name="company_id" readonly="1" groups="base.group_multi_company"/>
                            <field name="min_qty" optional="hide"/>
                            <field name="product_uom" groups="uom.group_uom"/>
                            <field name="price" string="Price"/>
                            <field name="p_unit_price" string="P Unit Price"/>
                            <field name="invisible_density" invisible="1"/>
                            <field name="density" string="Density" attrs="{'invisible':[('invisible_density', '!=', False)]}"/>
                            <field name="delay" optional="hide"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

</odoo>